<h1>Listing books</h1>

<table>
  <tr>
    <th>Isbn</th>
    <th>Titulo</th>
    <th>Genre</th>
    <th>Has ebook</th>
    <th>Cover url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.ISBN %></td>
    <td><%= book.titulo %></td>
    <td><%= book.genre_id %></td>
    <td><%= book.has_ebook %></td>
    <td><%= book.cover_url %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

