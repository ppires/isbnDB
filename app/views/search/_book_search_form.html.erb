<%= form_tag(book_search_path) do -%>

  <p>
    <%= label_tag 'Book Title' %><br />
    <%= text_field_tag 'book[name]' %>
  </p>

  <p>
    <%= label_tag 'ISBN' %><br />
    <%= text_field_tag 'book[ISBN]' %>
  </p>

  <p>
    <%= label_tag 'Preço' %><br />
    <%= text_field_tag 'book[price]' %>
  </p>

  <p>
    <%= label_tag 'Ano de Lançamento' %><br />
    <%= select_tag 'book[release_year]', @years_for_select.html_safe %>
  </p>

  <p>
    <%= label_tag 'Gênero' %><br />
    <%= select_tag 'book[genre]', options_from_collection_for_select(@genres, 'id', 'name') %>
  </p>

  <p>
    <%= submit_tag 'Search!' %>
  </p>
<% end -%>
